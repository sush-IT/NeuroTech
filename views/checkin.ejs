    <!-- Your CSS -->
    <link rel="stylesheet" href="/checkin.css">
</head>
<body>
    <a href="/checkin"></a>
    <!-- Header (if you are using partials) -->
    <%- include("partials/header") %>

    <main class="container my-5">
        <div class="checkin-box">

